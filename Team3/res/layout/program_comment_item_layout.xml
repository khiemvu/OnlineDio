<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f6f6f6"
                xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout">
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/comment_ivAvatarDetail"
               android:src="@drawable/ic_launcher"
               android:layout_marginLeft="10dp" android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sound of Silence"
              android:id="@+id/comment_tvName" android:layout_marginLeft="70dp" android:drawablePadding="5dp"
              android:layout_alignLeft="@+id/ivAvatar" android:textStyle="bold" android:typeface="sans"
              android:textColor="#333333" android:enabled="false"
              android:layout_marginTop="5dp"/>

    <TextView android:layout_width="140dp"
              android:layout_height="wrap_content"
              android:text="s days ago"
              android:drawablePadding="2dp"
              android:id="@+id/comment_tvTime"
              android:layout_toRightOf="@+id/comment_tvName"
              android:layout_marginLeft="35dp"
              android:layout_marginTop="2dp"
              android:textColor="#a7a7a7"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/comment_tvName"
              android:layout_marginLeft="70dp"
              android:id="@+id/comment_tvContent"
              android:text="@string/comment_content"
              android:typeface="sans"
              android:layout_marginTop="5dp"/>

</RelativeLayout>