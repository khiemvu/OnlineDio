<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f6f6f6"
                xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ivAvatar"
               android:src="@drawable/ic_launcher" android:layout_marginLeft="10dp" android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sound of Silence"
              android:id="@+id/tvTitle" android:layout_marginLeft="50dp" android:drawablePadding="5dp"
              android:layout_alignLeft="@+id/ivAvatar" android:textStyle="bold" android:typeface="sans"
              android:textColor="#333333" android:enabled="false"
              android:layout_marginTop="5dp"/>
    <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:text="Mr.Bean"
              android:id="@+id/tvName" android:layout_alignLeft="@+id/tvTitle" android:layout_below="@+id/tvTitle"
              android:textColor="#333333" android:typeface="sans"
              android:layout_marginTop="1dp"/>
    <TextView android:layout_width="140dp" android:layout_height="wrap_content" android:text="Like: 100"
              android:id="@+id/tvLike" android:layout_toRightOf="@+id/ivAvatar" android:layout_below="@+id/tvName"
              android:textColor="#777777" android:layout_marginTop="5dp"
              android:layout_marginLeft="4dp" android:layout_marginBottom="1.5dp"/>
    <TextView android:layout_width="150dp" android:layout_height="wrap_content" android:text="Comment: 9"
              android:id="@+id/tvComment" android:layout_toRightOf="@+id/tvName" android:layout_below="@+id/tvName"
              android:textColor="#777777" android:typeface="sans"
              android:layout_marginTop="4dp" android:layout_marginLeft="20dp" android:layout_marginBottom="1.5dp"/>
    <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="s days ago"
              android:drawableRight="@drawable/arrows2x" android:drawablePadding="10dp" android:id="@+id/tvTime"
              android:layout_alignParentLeft="true" android:layout_marginLeft="180dp"
              android:layout_below="@+id/tvTitle" android:layout_marginTop="2dp"
              android:textColor="#a7a7a7"/>
</RelativeLayout>